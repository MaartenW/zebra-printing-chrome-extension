{
    "manifest_version": 2,
    "name": "Zebra Printing",
    "version": "1.0",
    "description": "Allows to print ZPL to a network connected Zebra printer.",
    "icons": {
        "128": "zebra128.png"
    },
    "author": "Daniel Nitz",
    "permissions": [
        "<all_urls>",
        "background",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "offline_enabled": true
}